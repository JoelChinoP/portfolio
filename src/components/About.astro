---
import Section from "./ui/Section.astro";
import PerfilIlustration from "@/assets/profile.png";
import Star from "lucide-static/icons/star.svg";
import BriefcaseIcon from "lucide-static/icons/briefcase.svg";
import GraduationCapIcon from "lucide-static/icons/graduation-cap.svg";
import AwardIcon from "lucide-static/icons/award.svg";
import CodeIcon from "lucide-static/icons/code.svg";
import TitleSection from "./ui/TitleSection.astro";

// Datos dinámicos para tarjetas
const cardsData = [
  {
    title: "Experiencia",
    content: "HP, FNL & Proyectos",
    subtitle: "Técnico & Desarrollo",
    /* years: "2+ años", */
    icon: BriefcaseIcon,
  },
  {
    title: "Educación",
    content: "Ing. de Sistemas",
    subtitle: "UNSA - 4to año",
    icon: GraduationCapIcon,
  },
  {
    title: "Certificaciones",
    content: "6+ Logros",
    subtitle: "Hackatones & Oracle",
    icon: AwardIcon,
  },
  {
    title: "Tecnologías",
    content: "Fullstack",
    subtitle: "Java, React, Node.js",
    icon: CodeIcon,
  },
];
---

<Section id="about">
  <!-- Título arriba y centrado -->
  <TitleSection title="Sobre mí" />

  <div class="relative z-10 max-w-6xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center">
      <!-- Imagen con estrella -->
      <div class="flex justify-center items-center relative animate-fade-in-up">
        <div
          class="relative w-64 h-64 sm:w-72 sm:h-72 rounded-full bg-gradient-to-tr from-cyan-400/20 via-blue-400/10 to-cyan-300/20 shadow-2xl flex items-center justify-center overflow-hidden border-4 border-cyan-400/40"
        >
          <img
            src={PerfilIlustration.src}
            alt="Foto de perfil"
            class="w-48 h-48 sm:w-56 sm:h-56 object-cover shadow-xl animate-float"
          />
          <span
            class="absolute -inset-2 rounded-full border-4 border-cyan-400/30 animate-pulse"
          ></span>

          <!-- Estrella decorativa -->
          <div
            class="absolute -top-3 -right-3 bg-cyan-500 p-1.5 rounded-full shadow-lg animate-spin-slow"
          >
            <Star class="w-5 h-5 text-white" />
          </div>
        </div>
      </div>

      <!-- Texto -->
      <div class="animate-fade-in-up delay-150 md:col-span-2">
        <p
          class="text-base sm:text-lg md:text-xl text-slate-200 mb-6 leading-relaxed"
        >
          Ingeniero de Sistemas en formación enfocado en <strong
            >desarrollo backend</strong
          >
          construyendo aplicaciones robustas y escalables. Me especializo en la creación
          de <strong>APIs RESTful</strong>, microservicios y aplicaciones
          escalables usando Java, Spring Boot y Node.js.
        </p>

        <p
          class="text-base sm:text-lg md:text-xl text-slate-200 mb-8 leading-relaxed"
        >
          Participante activo en eventos como Datatón 2024 Labora Tech, enfocado
          en resolver desafíos técnicos e impulsar innovación. Mi meta:
          <strong
            >desarrollar soluciones robustas que escalen con eficiencia</strong
          >.
        </p>
      </div>
    </div>

    <!-- Tarjetas que ocupan todo el ancho (ambas columnas) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 mt-12">
      {
        cardsData.map((card) => (
          <div class="bg-gradient-to-br from-blue-800/40 via-cyan-800/40 to-blue-900/40 backdrop-blur-md border border-cyan-400/30 rounded-xl p-5 shadow-xl hover:shadow-cyan-500/10 transition-all duration-300 hover:scale-105 group">
            <div class="flex items-start gap-4">
              <div class="flex justify-center items-center w-12 h-12 bg-gradient-to-r from-blue-800 via-cyan-800 to-blue-900 border border-blue-400/70 text-cyan-100 rounded-full shadow-xl transition-all duration-300 group-hover:from-transparent group-hover:via-transparent group-hover:to-transparent group-hover:bg-cyan-500/10 group-hover:scale-110 group-hover:backdrop-blur-lg group-hover:text-cyan-300">
                <card.icon class="w-5 h-5" />
              </div>

              <div class="flex flex-col gap-2">
                <p class="text-cyan-300 font-semibold text-lg">{card.title}</p>
                <p class="text-slate-100 text-xl font-bold">{card.content}</p>
                <div class="flex justify-between items-end">
                  <p class="text-slate-300 text-sm">{card.subtitle}</p>
                  {card.years && (
                    <span class="bg-cyan-500/20 px-3 py-1 rounded-full text-cyan-300 text-sm">
                      {card.years}
                    </span>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</Section>

<style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(40px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s cubic-bezier(0.4, 0, 0.2, 1) both;
  }

  .delay-150 {
    animation-delay: 0.15s;
  }

  .delay-300 {
    animation-delay: 0.3s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-12px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .animate-spin-slow {
    animation: spin-slow 6s linear infinite;
  }

  .animate-pulse {
    animation: pulse 2.5s infinite;
  }
</style>

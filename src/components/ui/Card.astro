---
import { type CardProject } from "@/types/card";
import Github from "lucide-static/icons/github.svg";
import ExternalLinkIcon from "lucide-static/icons/external-link.svg";

const { title, description, imageUrl, tags, github, demo } =
  Astro.props as CardProject;
---

<div
  class="bg-gray-800 rounded-xl overflow-hidden shadow-lg border border-gray-700 transition-transform hover:-translate-y-2"
>
  <div class="h-48 overflow-hidden">
    <img
      src={imageUrl}
      alt={title}
      class="w-full h-full object-cover transition-transform hover:scale-105"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-400 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2 mb-6">
      {
        tags.map((tag) => (
          <span class="text-xs px-2 py-1 bg-gray-700 text-purple-300 rounded-full">
            {tag}
          </span>
        ))
      }
    </div>
    <div class="flex space-x-3">
      <a
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 text-sm text-gray-300 hover:text-purple-500 transition-colors"
      >
        <Github class="h-16 w-16" />
        CÃ³digo
      </a>
      <a
        href={demo}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 text-sm text-gray-300 hover:text-purple-500 transition-colors"
      >
        <ExternalLinkIcon class="h-16 w-16" />
        Demo
      </a>
    </div>
  </div>
</div>
